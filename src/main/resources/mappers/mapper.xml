<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gold.mappers.UserMapper">
    <!--로그인-->
    <select id="getUserAccount" resultType="com.gold.user.UserVO">
        SELECT * FROM USER
        WHERE USER_ID = #{userID};
    </select>

    <!--회원가입-->
    <insert id="saveUser" parameterType="com.gold.user.UserVO">
        INSERT INTO USER (user_id, user_pw, user_name, user_phone, user_email, user_adr, user_auth)
        VALUES(#{userID},#{userPW},#{userName},#{userPhone},#{userEmail},#{userADR},#{userAuth});
    </insert>
</mapper>
